{
    "compilerOptions": {
        "target": "ES5",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
    },
    "exclude": [
        "node_modules",
        "lib",
        "*/**/*.spec.ts"
    ]
}